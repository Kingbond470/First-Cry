                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cutewalk"
                    android:layout_marginTop="210dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp" />                    "/>
