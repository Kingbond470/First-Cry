                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/carter"
                    android:layout_marginTop="200dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
