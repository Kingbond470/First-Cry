                    android:layout_marginTop="290dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
